@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <div class="container-fluid">
        <div class="row" style="">
            @foreach (var item in Model.listflowers)
            {
                <div class="col border border-3 rounded text-center m-2">
                    <div class="col-lg-8 border border-3 rounded text-center" style="margin: auto;">
                        @if (!string.IsNullOrWhiteSpace(item.image))
                        {
                            <img src="~/images/@item.image" width="100%" height="200px" />
                        }
                        else
                        {
                            <p>No image available</p>
                        }
                    </div>
                    <div>
                        <h5>Name : @item.f_name</h5>
                        <p>
                            Type: @item.f_type<br>
                            Color: @item.f_color<br>
                            Price: @item.price
                        </p>
                        <a href="/customer/order" class="btn bg-primary text-light" type="button">Book Now</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
